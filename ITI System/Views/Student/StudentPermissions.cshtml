@model st_permession
@{
    ViewBag.Title = "StudentPermissions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>StudentPermissions</h2>
<div class="col-sm-5">
    @Html.DropDownListFor(a => a.Dept_Id, ViewBag.dept_drop as SelectList, "Select Department", new { @class = "form-control", @id = "drop" })
</div>
<div class="col-sm-5" id="std_list">

</div>
<form class="form-group " action="/Student/PostStudentPermissions" method="post" id="form">

    <div class="form-group col-sm-6 hidden">
        <div class="col-sm-6">
            @Html.EditorFor(a => a.Perm_Date_from, "from", new { @class = "form-control", @id = "from" })
        </div>
    </div>

    <div class="form-group col-sm-6">
        <div class="col-sm-6" id="std_list">
          

        </div>
    </div>
    <input type="hidden" id="ID" name="Id" />

    <div class="form-group col-sm-6 hidden">
        <div class="col-sm-6">
            @Html.EditorFor(a => a.Perm_Date_to, "to", new { @class = "form-control", @id = "to" })
        </div>
    </div>
    <div class="form-group col-sm-6 hidden">
        <div class="col-sm-6">
            <input type="submit" value="Get Students" class="btn btn-success" />

        </div>
    </div>
</form>

<script>
    $("#drop").change(function () {
        var DeptId = $("#drop").val();
        $("#std_list").load("http://localhost:39802/Student/DeptStudent/" + DeptId);
    })
</script>

