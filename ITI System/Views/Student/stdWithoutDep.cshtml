@model IEnumerable<Student>
@{
    ViewBag.Title = "stdWithoutDep";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2></h2>
<div>

    @using (Html.BeginForm("addToDep", "student", FormMethod.Post))
    {
        @Html.DisplayName(" select department ")
        @Html.DropDownList("deparetment", ViewBag.depts as SelectList, new { @id = "dep" })

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        <input type="checkbox" name="stdindep" value="@item.Id" />
                    </td>
                </tr>
            }
        </table>
        <input type="submit" value="Add to department" />
    }

</div>
