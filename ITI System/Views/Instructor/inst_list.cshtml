@model IEnumerable<Instructor>

<div class="row">
    <div class="table-responsive">
        <p>
            @Html.ActionLink("Create New", "Create", "Instructor", new { @class = "btn btn-primary" })
        </p>
        <table class="table table-bordered table-hover">
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Is Married
                </th>
                <th>
                    Birth Date
                </th>
                <th>
                    Email
                </th>
                <th>
                    Phone Number
                </th>
                <th>
                    User Name
                </th>
                <th>
                    Qualifications
                </th>
                <th>
                    Status
                </th>
                <th>
                    Graduation Year
                </th>
                <th>
                    Department
                </th>
                <th>Operation</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @item.IsMarried
                    </td>
                    <td>
                        @item.BirthDate.ToShortDateString()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ins_Qualifications)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ins_Status)
                    </td>
                    <td>
                        @item.Ins_GraduationYear.ToShortDateString()
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department.Dept_name)
                    </td>
                    <td>
                        @Ajax.ActionLink("Edit", "Edit", new { id = item.Id }, new AjaxOptions()
                   {
                       HttpMethod = "GET",
                       InsertionMode = InsertionMode.Replace,
                       UpdateTargetId = "EditInstModal",
                       OnSuccess = "EditInst()"
                   }, new { @class = "btn btn-warning" })
                        |
                        @Ajax.ActionLink("Details", "Details", new { id = item.Id }, new AjaxOptions()
                   {
                       HttpMethod = "GET",
                       InsertionMode = InsertionMode.Replace,
                       UpdateTargetId = "InstDetails",
                       OnSuccess = "InsDetails()"
                   },new { @class = "btn btn-info" })

                        @Ajax.ActionLink("Delete", "delete", new { id = item.Id }, new AjaxOptions()
                   {
                       InsertionMode = InsertionMode.Replace,
                       UpdateTargetId = "list"
                   }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

<div>
    <div class="modal" id="InstModal" style="background-color: #ffffff">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4> Edit Instructor</h4>
                    <button class="close" data-dissmiss="modal">&times;</button>
                </div>
                <div class="modal-body" id="EditInstModal"></div>
            </div>

        </div>

    </div>
</div>

<div>
    <div class="modal" id="DetailModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4> Instructor Details</h4>
                    <button class="close" data-dissmiss="modal">&times;</button>
                </div>
                <div class="modal-body" id="InstDetails"></div>
            </div>

        </div>
    </div>
</div>

