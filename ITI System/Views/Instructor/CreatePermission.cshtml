@model Permission
@{
    ViewBag.Title = "MgrPermStd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MgrPermStd</h2>

<form class="form-group" action="/Instructor/CreatePermission" method="post">
    <div class="col-sm-4">
        @Html.DropDownListFor(a => a.Stud_Id, ViewBag.std_drop as SelectList, "SelectStudent", new { @class = "form-control", @id = "std_drop" })
    </div>


    <div class="form-group col-sm-6">
        <div class="col-sm-6">
            @Html.EditorFor(a => a.Perm_Date, new { @class = "form-control" })
        </div>
        </div>
        <div class="form-group col-sm-6">
            <div class="col-sm-6">
                <input type="submit" value="Give Permission" class="btn btn-success" />
              
            </div>
        </div>
</form>

